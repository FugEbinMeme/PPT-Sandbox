                                        <TabItem x:Name="TinyRule">
                                            <StackPanel Margin="10 5 10 0">
                                                <Border Margin="0 0 0 5" BorderBrush="#202020" Height="1" BorderThickness="0 0 0 1" />

                                                <Border BorderBrush="#202020" Height="1" BorderThickness="0 0 0 1" />
                                            </StackPanel>
                                        </TabItem>
                                    </TabControl>
                                </StackPanel>
                            </TabItem>
                        </TabControl>
                    </StackPanel>
                </TabItem>
            </TabControl>

            <StackPanel HorizontalAlignment="Center">
                <TextBlock Margin="5 -4 5 1" Foreground="#707070" x:Name="VersionText" />

                <Border BorderBrush="#202020" Height="1" BorderThickness="0 0 0 1" />
            </StackPanel>
        </StackPanel>

        <StackPanel Margin="5 5 30 5" VerticalAlignment="Top" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Style="{StaticResource SquareButtonStyle}" Controls:ButtonHelper.PreserveTextCase="True" Width="50" x:Name="ResetButton" Click="Reset" />
            <Button Style="{StaticResource SquareButtonStyle}" Controls:ButtonHelper.PreserveTextCase="True" Width="50" x:Name="SaveButton" Click="Encode" Margin="5 0" />
            <Button Style="{StaticResource SquareButtonStyle}" Controls:ButtonHelper.PreserveTextCase="True" Width="50" x:Name="LoadButton" Click="Decode" />
        </StackPanel>
    </Grid>
</Controls:MetroWindow>
